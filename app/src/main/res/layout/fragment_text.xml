    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fABAdd3"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="145dp"
        android:backgroundTint="@color/style_secondary"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/style_primary"
        app:srcCompat="@drawable/ic_baseline_add_circle_outline_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fABAdd2"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/style_secondary"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/style_primary"
        app:srcCompat="@drawable/ic_baseline_add_task_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fABAdd"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/style_secondary"
        android:clickable="true"
        app:backgroundTint="@color/style_primary"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@color/style_primary"
        android:defaultFocusHighlightEnabled="false"
        android:text="Add Task"
        android:textColor="@color/text_night"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvAddHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="165dp"
        android:backgroundTint="@color/style_primary"
        android:defaultFocusHighlightEnabled="false"
        android:text="Add Habit"
        android:textColor="@color/text_night"
        android:textColorHighlight="@color/style_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</FrameLayout>